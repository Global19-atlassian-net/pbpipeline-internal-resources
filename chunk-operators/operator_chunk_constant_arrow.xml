<?xml version="1.0" encoding="utf-8" ?>
<chunk-operator id="pbcommandR.operators.chunk_constant_arrow">

    <task-id>pbcommandR.tasks.constant_arrow</task-id>

    <scatter>
        <scatter-task-id>pbcoretools.tasks.alignment_zmw_scatter</scatter-task-id>
        <chunks>
            <chunk out="$chunk.alignmentset_id" in="pbcommandR.tasks.constant_arrow:0"/>
            <chunk out="$chunk.reference_id" in="pbcommandR.tasks.constant_arrow:1"/>
        </chunks>
    </scatter>
    <!-- Define the Gather Mechanism -->
    <gather>
        <chunks>
            <chunk>
                <gather-task-id>pbcoretools.tasks.gather_csv</gather-task-id>
                <chunk-key>$chunk.csv_id</chunk-key>
                <task-output>pbcommandR.tasks.constant_arrow:0</task-output>
            </chunk>
        </chunks>
    </gather>
</chunk-operator>
